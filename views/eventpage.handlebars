<body>
	   <div class = "navbar navbar-inverse navbar-fixed-top">
    <div class = "container">
           
            <a href = "#" class = "navbar-brand">
            <img height="25" src="images/octocat-large-transparent.png">
            </a>
           
            <button class = "navbar-toggle" data-toggle = "collapse" data-target = ".navHeaderCollapse">
                    <span class = "icon-bar"></span>
                    <span class = "icon-bar"> </span>
                    <span class = "icon-bar"></span>
            </button>
           
            <div class = "collapse navbar-collapse navHeaderCollapse">  
            <ul class = "nav navbar-nav navbar-right">
           
                    <li><a href = "/home">Home</a></li>
   
                    <li><a href = "/createevent">Create Event</a></li>
                    <li><a href = "/eventcode">Event Code </a></li>
            </ul>
            </div>
           
    </div>
    </div>
    <br>
	<div class="screen">
		<h1 class="headerbox">{{title}}</h1>
		<h5>{{date}}</h5>
		<h7>{{description}}</h7>

		<hr>
		{{#each idea}}
			<div class="idea" id="{{name}}">
				<img src="{{image}}" class="image" id="{{bought}}_{{name}}_image">
				<form action="/idea" method="get" id="{{name}}_form" class="form">
					<button id="{{name}}_selected" type="submit" class="submitButton" value="{{eventid}}+{{name}}" name="selected">{{name}}</button>
				</form>
				<hr>
			</div>
		{{/each}}

		<br>
		<form action="/submitidea">
				<button type="submit" class="submitButton" name="submitidea" id="submitidea" value="{{id}}">Submit Idea</button>
		</form>
	</div>
		   <script src = "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	    <script src = "/js/bootstrap.js"></script>	
